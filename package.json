{
  "name": "mess-manager",
  "version": "1.0.0",
  "description": "A desktop app for managing mess/inventory data built with Next.js and Electron.",
  "author": "Mohit Gupta",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export",
    "dist": "electron-builder",
    "electron:dev": "concurrently \"next dev\" \"electron .\"",
    "electron:build:mac": "electron-builder --mac dmg",
    "electron:build:win": "electron-builder --win",
    "electron:build:all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.messmanager.desktop",
    "productName": "Mess Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "package.json"
    ],
    "asar": true,
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "express": "^4.19.0",
    "googleapis": "^128.0.0",
    "csv-parse": "^6.1.0",
    "csv-string": "^4.1.1",
    "csv-stringify": "^6.6.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "concurrently": "^8.2.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8",
    "tailwindcss": "^3",
    "typescript": "^5"
  }
}
